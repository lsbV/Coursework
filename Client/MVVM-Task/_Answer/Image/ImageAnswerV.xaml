<UserControl x:Class="Client.MVVM_Task._Answer.ImageAnswerV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.MVVM_Task._Answer"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:ImageAnswerVM}"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBox Text="{Binding Path=Text}"  />

        <StackPanel Orientation="Horizontal">
            <RadioButton IsChecked="{Binding IsCorrect}" VerticalAlignment="Center"/>
            <Image Source="{Binding Path=ImageSource}" Width="150" Height="150" />
        </StackPanel>
    </StackPanel>
</UserControl>
